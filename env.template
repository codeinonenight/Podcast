# Database (Auto-provided by Railway)
DATABASE_URL="postgresql://user:password@localhost:5432/podcast_analyzer"

# Azure Speech Service (Fast Transcription API)
AZURE_SPEECH_KEY="your_azure_speech_key_here"
AZURE_SPEECH_REGION="eastus"
# Note: Using Fast Transcription API with Language Identification
# Supports files up to 100MB, multiple languages, word-level timestamps

# OpenRouter API
OPENROUTER_API_KEY="your_openrouter_api_key_here"

# App Configuration
NEXT_PUBLIC_APP_URL="https://your-app.up.railway.app"
NEXT_PUBLIC_APP_NAME="Podcast Analyzer"
MAX_FILE_SIZE_MB=100
MAX_DURATION_MINUTES=180

# Processing Configuration
PYTHON_PATH="/usr/bin/python3"
FFMPEG_PATH="/usr/bin/ffmpeg"
CHROME_BIN="/usr/bin/chromium-browser"
TEMP_DIR="/tmp/audio_processing"

# Optional: Redis for caching (Railway Redis)
REDIS_URL="redis://localhost:6379"

# Security
NEXTAUTH_SECRET="your_nextauth_secret_here"
NEXTAUTH_URL="https://your-app.up.railway.app"

# Development
NODE_ENV="development"
LOG_LEVEL="debug" 